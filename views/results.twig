<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />

    <link rel='stylesheet' href='/stylesheets/bootstrap-theme.min.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-1.10.2.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/results.js"></script>
</head>
<body>
<div class="container space_under_10">
    <div class="row">
        <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3 center"></div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 center">
            <h1>Résultats</h1>
        </div>
        <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3 center"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="center">
                <h3>Résultats</h3>
            </div>

            <div id="results_content">
            </div>
        </div>
    </div>
</div>
<script>
    $( document ).ready(function() {
        var slope   = new Array();
        var users   = new Array();
        var results = new Array();

        var i=0;
        {% for s in scores %}
            slope[i] = new Array();
            {% for j in 0..17 %}
                slope[i][{{ j }}] = {
                    score   : '{{ s[2][j][0] }}',
                    putts   : '{{ s[2][j][1] }}',
                    recus   : '{{ s[2][j][2] }}',
                    rendus  : '{{ s[2][j][3] }}',
                    par     : '{{ s[2][j][4] }}'
                };
            {% endfor %}

            results[i] = {
                coups   : {{ s[4][0] }},
                net     : {{ s[4][1] }},
                brut    : {{ s[4][2] }},
                putts   : {{ s[4][3] }}
            }

            users[i] = {
                name : '{{ s[0] }}',
                index : '{{ s[1] }}'
            };
            i++;
        {% endfor %}

        createResultTab(users, slope, results);
    });
</script>
</body>
</html>